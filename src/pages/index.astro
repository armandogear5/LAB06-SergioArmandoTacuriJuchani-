---
import Layout from '../layouts/Layout.astro';
import RandomAvatarCard from '../components/RandomAvatarCard.tsx';
---
<Layout title="Random Avatar Card">
	<main>
		<h1>componente avatar</h1>
		<RandomAvatarCard client:load />
	</main>
</Layout>

<style>
	main {
		margin: auto;
		padding: 2rem;
		width: 800px;
		max-width: calc(100% - 2rem);
		color: black;
		font-size: 20px;
		line-height: 1.6;
		text-align: center;
		background-color: white;
	}
	h1 {
		font-size: 2rem;
		font-weight: 700;
	}
</style>
