---
import Layout from '../layouts/Layout.astro';
import List from '../components/List.tsx';
---

<Layout title="Welcome to Astro.">
	<main>
		<h1>Componente Lista</h1>
		<List client:load />
	</main>
</Layout>

<style>
	main {
		margin: auto;
		padding: 2rem;
		width: 800px;
		max-width: calc(100% - 2rem);
		color: black;
		font-size: 20px;
		line-height: 1.6;
		background-color: white;
	}

	h1 {
		font-size: 2rem;
		font-weight: 700;
	}
</style>
